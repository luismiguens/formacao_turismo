{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    
     {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}

     
       <!-- tables -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Alterar Password</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">


                    <div class="container">
                        <div class="row">
                            <div class="col">

    {% block form_errors %}
        {% spaceless %}
            {% if errors is defined and errors|length > 0 %}
                <ul>
                    {% for error in errors %}
                        <li style="color: red;">{{ error.message }}</li>
                        {% endfor %}
                </ul>
            {% endif %}
        {% endspaceless %}
    {% endblock form_errors %}

    
            {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-success"> 
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

    </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </section>
    <!-- / table -->
     
   

{% endblock %}