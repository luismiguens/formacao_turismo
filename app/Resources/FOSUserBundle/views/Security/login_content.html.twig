
{% trans_default_domain 'FOSUserBundle' %}

{#{% form_theme form _self %}#}

{% block form_errors %}
    {% spaceless %}
        {% if errors is defined and errors|length > 0 %}
            <ul>
                {% for error in errors %}
                    <li style="color: red;">{{ error.message }}</li>
                    {% endfor %}
            </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}




<div class="viewport cover">

    <video autoplay muted loop id="myVideo">
        <source src="{{ asset('bundles/app/assets/video/videohea.mp4') }}" type="video/mp4">
    </video>

    <div class="cover-overlay"></div>

    <div class="container">
        <div class="row justify-content-center align-items-center vh-100">
            <div class="col-md-6 col-lg-5">
                <div class="accordion-group accordion-group-portal" data-accordion-group>

                    <div class="accordion open" data-accordion>
                        <div class="accordion-control" data-control>
                            <h5>{% if app.request.locale == 'pt' %}Entrar{% else %}Authenticate{% endif %}</h5>
                        </div>
                        <div class="accordion-content" data-content>
                            <div class="accordion-content-wrapper">
                                {# {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form registration-form align-center fos_user_registration_register'}}) }}#}
                                <form action="{{ path("fos_user_security_check") }}" method="post" class="form registration-form align-center">


                                    {% if error %}
                                        <div style="color: red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}


                                    {% if csrf_token %}
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    {% endif %}

                                    <div class="form-group">
                                        <label for="username">{{ 'security.login.username'|trans }}</label>
                                        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

                                    </div>
                                    <div class="form-group">
                                        <label for="password">{{ 'security.login.password'|trans }}</label>
                                        <input type="password" id="password" class="form-control" name="_password" required="required" autocomplete="current-password" />

                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                    </div>

                                    {#<input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />#}
                                    <input type="submit" class="btn btn-primary btn-block" value="Sign In">

                                    <hr/>
                                    <fieldset class="col-sm-12">
                                     {{ 'autenticao_sem_registo'|trans({}, 'messages') }} <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>

                                        <br />

                                     {{ 'autenticao_sem_password'|trans({}, 'messages') }}  <a href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</a>
                                    </fieldset>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






