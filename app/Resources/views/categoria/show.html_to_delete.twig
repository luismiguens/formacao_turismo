{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categoria</h1>

    <table>
        <tbody>
            <tr>
                <th>Titulopt</th>
                <td>{{ categoria.tituloPt }}</td>
            </tr>
            <tr>
                <th>Tituloen</th>
                <td>{{ categoria.tituloEn }}</td>
            </tr>
            <tr>
                <th>Descricaopt</th>
                <td>{{ categoria.descricaoPt }}</td>
            </tr>
            <tr>
                <th>Descricaoen</th>
                <td>{{ categoria.descricaoEn }}</td>
            </tr>
            <tr>
