{% extends 'base.html.twig' %}

{% block body %}

    <div id="candidaturas-header">
        {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}
    </div>



    <!-- tables -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Categorias lista</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">


                    <div class="container">
                        <div class="row">
                            <div class="col">


                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}


                                <table class="table table-lined">
                                    <thead>
                                        <tr>
                                            {#<th scope="col">Id</th>#}
                                            <th width="25%"  scope="col">Titulopt</th>
                                            <th width="50%"  scope="col">Descricaopt</th>
                                            <th width="15%"  scope="col">Imagem</th>
                                            <th width="10%"  scope="col">Acções</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for categoria in categorias %}
                                            <tr>
                                                {#<th scope="row">{{ categoria.id }}</th>#}
                                                <td scope="row">{{ categoria.tituloPt | striptags }}</td>
                                                <td>{{ categoria.descricaoPt |raw }}</td>
                                                <td><img src="{{ vich_uploader_asset(categoria, 'imagemFile') }}" alt="{{ categoria.tituloPt | striptags }}" /></td>
                                                <td><a href="{{ path('admin_categoria_edit', { 'id': categoria.id }) }}">{% trans %}botao_editar{% endtrans %}</a></td>
                                            </tr>
                                        {% endfor %}

                                    </tbody>
                                </table>

                                <ul>
                                    <li>
                                        <a href="{{ path('admin_categoria_new') }}">{% trans %}botao_criar{% endtrans %}</a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </section>
    <!-- / table -->


{% endblock %}
