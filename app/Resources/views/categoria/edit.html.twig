{% extends 'base.html.twig' %}

{% block body %}

    <div id="candidaturas-header">
        {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}
    </div>

    <!-- form controls -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Categorias editar</h4>
                </div>
            </div>
        </div>



        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_start(edit_form) }}


                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}

                                <div class="form-group">
                                    {{ form_label(edit_form.tituloPt) }}
                                    {{ form_errors(edit_form.tituloPt) }}
                                    {{ form_widget(edit_form.tituloPt, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(edit_form.tituloEn) }}
                                    {{ form_errors(edit_form.tituloEn) }}
                                    {{ form_widget(edit_form.tituloEn, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(edit_form.descricaoPt) }}
                                    {{ form_errors(edit_form.descricaoPt) }}
                                    {{ form_widget(edit_form.descricaoPt, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                
                                <div class="form-group">
                                    {{ form_label(edit_form.descricaoInternaPt) }}
                                    {{ form_errors(edit_form.descricaoInternaPt) }}
                                    {{ form_widget(edit_form.descricaoInternaPt, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(edit_form.descricaoEn) }}
                                    {{ form_errors(edit_form.descricaoEn) }}
                                    {{ form_widget(edit_form.descricaoEn, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.descricaoInternaEn) }}
                                    {{ form_errors(edit_form.descricaoInternaEn) }}
                                    {{ form_widget(edit_form.descricaoInternaEn, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(edit_form.imagemFile) }}
                                    {{ form_errors(edit_form.imagemFile) }}
                                    {{ form_widget(edit_form.imagemFile, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                
                                <div class="form-group">
                                    {{ form_label(edit_form.isSemCandidatura) }}
                                    {{ form_errors(edit_form.isSemCandidatura) }}
                                    {{ form_widget(edit_form.isSemCandidatura, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                
                                
                                
                                <div class="form-group">
                                    {{ form_label(edit_form.candidaturaVencedora) }}
                                    {{ form_errors(edit_form.candidaturaVencedora) }}
                                    {{ form_widget(edit_form.candidaturaVencedora, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <hr/>

                                <button type="submit" class="btn btn-primary">{% trans %}botao_actualizar{% endtrans %}</button>
                                {{ form_end(edit_form) }}

                                <ul>
                                    <li>
                                        <a href="{{ path('admin_categoria_index') }}">{% trans %}botao_voltar{% endtrans %}</a>
                                    </li>
                                    <li>
                                        {{ form_start(delete_form) }}
                                        <input type="submit" value="{% trans %}botao_eliminar{% endtrans %}">
                                        {{ form_end(delete_form) }}
                                    </li>
                                </ul>


                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </section>





{% endblock %}
