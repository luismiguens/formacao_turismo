{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parceiro</h1>

    <table>
        <tbody>
            <tr>
                <th>Nome</th>
                <td>{{ parceiro.nome }}</td>
            </tr>
            <tr>
                <th>Imagem</th>
                <td>{{ parceiro.imagem }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ parceiro.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_parceiro_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_parceiro_edit', { 'id': parceiro.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
