{% extends 'base.html.twig' %}

{% block body %}

    <div id="candidaturas-header">
        {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}
    </div>



    <!-- tables -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Parceiros lista</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">


                    <div class="container">
                        <div class="row">
                            <div class="col">


                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}


                                <table class="table table-lined">
                                    <thead>
                                        <tr>
                                           {# <th scope="col">Id</th>#}
                                            <th scope="col">Nome</th>
                                            <th scope="col">Juri</th>
                                            <th scope="col">Imagem</th>
                                            <th>Acções</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for parceiro in parceiros %}
                                            <tr>
                                                {#<th scope="row">{{ parceiro.id}}</th>#}
                                                <td scope="row">{{ parceiro.nome }}</td>
                                                <td scope="row">{% if parceiro.isJuri %}yes{% else %}no{% endif%}</td>
                                                <td><img src="{{ vich_uploader_asset(parceiro, 'imagemFile') }}" alt="{{ parceiro.nome }}" /></td>
                                                <td><a href="{{ path('admin_parceiro_edit', { 'id': parceiro.id }) }}">{% trans %}botao_editar{% endtrans %}</a></td>
                                            </tr>
                                        {% endfor %}

                                    </tbody>
                                </table>

                                <ul>
                                    <li>
                                        <a href="{{ path('admin_parceiro_new') }}">{% trans %}botao_criar{% endtrans %}</a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </section>
    <!-- / table -->


{% endblock %}
