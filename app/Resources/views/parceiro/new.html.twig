

{% extends 'base.html.twig' %}

{% block body %}

    <!-- form controls -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Parceiros editar</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_start(form) }}


                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}

                                <div class="form-group">
                                    {{ form_label(form.nome) }}
                                    {{ form_errors(form.nome) }}
                                    {{ form_widget(form.nome, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.imagemFile) }}
                                    {{ form_errors(form.imagemFile) }}
                                    {{ form_widget(form.imagemFile, {'attr': {'class': 'form-control'}}) }}
                                </div>


                                <hr/>

                                <button type="submit" class="btn btn-primary">Guardar</button>
                                {{ form_end(form) }}

                                <ul>
                                    <li>
                                        <a href="{{ path('admin_parceiro_index') }}">Voltar a lista</a>
                                    </li>

                                   
                                </ul>


                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </section>




{% endblock %}
