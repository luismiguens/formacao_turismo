
{% extends 'base.html.twig' %}

{% block body %}
    
    {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}

    <!-- form controls -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Parceiros editar</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_start(edit_form) }}


                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}

                                <div class="form-group">
                                    {{ form_label(edit_form.nome) }}
                                    {{ form_errors(edit_form.nome) }}
                                    {{ form_widget(edit_form.nome, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                
                                
                                <div class="form-group">
                                    {{ form_label(edit_form.isJuri) }}
                                    {{ form_errors(edit_form.isJuri) }}
                                    {{ form_widget(edit_form.isJuri, {'attr': {'class': ''}}) }}
                                </div>
                                
                                <div class="form-group">
                                    {{ form_label(edit_form.imagemFile) }}
                                    {{ form_errors(edit_form.imagemFile) }}
                                    {{ form_widget(edit_form.imagemFile, {'attr': {'class': 'form-control'}}) }}
                                </div>


                                <hr/>

                                <button type="submit" class="btn btn-primary">Guardar</button>
                                {{ form_end(edit_form) }}

                                <ul>
                                    <li>
                                        <a href="{{ path('admin_parceiro_index') }}">Voltar a lista</a>
                                    </li>

                                    <li>
                                        {{ form_start(delete_form) }}
                                        <input type="submit" value="Delete">
                                        {{ form_end(delete_form) }}
                                    </li>
                                </ul>


                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </section>




{% endblock %}
