{% extends 'base.html.twig' %}

{% block body %}

    {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}

    <!-- form controls -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Votação criar</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">

                <div class="component-example">
                    <div class="container">

                        {{ form_start(form) }}

                        {% for flashMessage in app.session.flashbag.get('notice') %}
                            <div class="alert alert-success">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}


                        <div class="row">
                            <div class="col-md-12">
                                <h5>Categoria</h5> <p>{{ votacao.candidatura.categoria }}</p>
                                <h5>Nome do Promotor</h5> <p>{{ votacao.candidatura.promotorNome }}</p>
                                <h5>Projecto do Promotor</h5><p> {{ votacao.candidatura.promotorProjecto }}</p>
                            </div>
                        </div>

                        {% for voto in form.votos %}
                            <div class="row">

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Critério</label><br/>
                                        {{ voto.vars.value.resposta.criterio }}
                                    </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Resposta</label><br/>
                                        {{ voto.vars.value.resposta.texto}}
                                    </div>
                                </div>


                                <div class="col-md-3">
                                    <div class="form-group">
                                        {{ form_label(voto.valor) }}
                                        {{ form_errors(voto.valor) }}
                                        {{ form_widget(voto.valor, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                            </div>

                        {% endfor %}


                        <hr/>

                        <button type="submit" class="btn btn-primary">Guardar</button>

                        {{ form_end(form) }}

                        <ul>
                            <li>
                                <a href="{{ path('admin_votacao_index') }}">Voltar a lista</a>
                            </li>
                        </ul>

                    </div>
                </div>

            </div>
        </div>
    </section>




{% endblock %}
