{% extends 'base.html.twig' %}

{% block body %}

    {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}

    <!-- tables -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Votações lista</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">

                    <div class="container">
                        <div class="row">
                            <div class="col">

                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}


                                <table class="table table-lined">
                                    <thead>
                                        <tr>
                                            <th scope="col">Id</th>
                                            <th>Categoria</th>
                                             <th>PromotorNome</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for candidatura in candidaturas %}
                                            <tr>
                                                <td>{{ candidatura.id }}</td>
                                                <td>{{ candidatura.categoria }}</td>
                                                <td>{{ candidatura.promotorNome }}</td>
                                                <td><a href="{{ path('admin_votacao_new', { 'candidatura': candidatura.id }) }}">Registar votação</a></td>
                                            </tr>
                                        {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- / table -->


{% endblock %}
