<section id="categories" class="bg-light">
    <div class="container">
        <div class="row text-white justify-content-between align-items-center">
            <div class="col-md-4">
                <h2 class="text-black"><span class="text-black">6</span> {% trans %}categories_Categories{% endtrans %}</h2>
            </div>
            {#<div class="col-md-7">
              <div class="input-group rounded">
                <input type="text" class="form-control px-3" placeholder="Search lessons ..." aria-label="Search lessons">
                <div class="input-group-append">
                  <button class="btn btn-primary" type="button">Search</button>
                </div>
              </div>
            </div>#}
        </div>
        <div class="row text-white" data-aos="fade-left">
            <div class="col">
                <div class="owl-carousel owl-carousel-library visible" data-loop="true" data-items="[3,2,1]" data-margin="30" data-nav="true">

                    {% for categoria in categorias %}

                        <article class="tile tile-long">
                            <div class="tile-image" style="background-image: url({{ vich_uploader_asset(categoria, 'imagemFile') }})"></div>
                            <div>
                                <div class="tile-header on-hover text-right">
                                    <a href="{{ path('admin_candidatura_new', { 'categoria': categoria.id } ) }}" class="btn btn-sm btn-outline-white">{% trans %}categories_Watch Now{% endtrans %}</a>
                                </div>
                                <div class="tile-footer">
                                    <span class="eyebrow">&nbsp;</span>

                                    {% if app.request.locale == 'pt' %}
                                        <h4>{{ categoria.tituloPt }}</h4>
                                    {% else %}
                                        <h4>{{ categoria.tituloEn }}</h4>
                                    {% endif %}

                                </div>

                            </div>
                        </article>

                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
</section>
<!-- / lessons -->



