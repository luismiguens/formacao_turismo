<section id="contact">

    <div class="container">

        <h1 class="title text-center text-uppercase mb-5">{% trans %}contact_title{% endtrans %}</h1>
        <h3 class="title text-center text-uppercase mb-0">{% trans %}contact_subtitle_1{% endtrans %}</h3>
        <h3 class="title text-center text-uppercase">{% trans %}contact_subtitle_2{% endtrans %}</h3>

        <div class="row mt-5">

            <div class="col">

                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'g-mb-30'}}) }}

                <div class="form-row mb-1">

                    <div class="col">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-minimal', 'placeholder': 'form_name'|trans }}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="col">
                        {{ form_widget(form.surname, {'attr': {'class': 'form-control form-control-minimal', 'placeholder': 'form_surname'|trans }}) }}
                        {{ form_errors(form.surname) }}
                    </div>

                </div>

                <div class="form-row mb-1">

                    <div class="col">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-minimal', 'placeholder': 'form_email'|trans }}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="col">
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-minimal', 'placeholder': 'form_phone'|trans }}) }}
                        {{ form_errors(form.phone) }}
                    </div>

                </div>

                <div class="form-row mb-1">

                    <div class="col">
                        {{ form_widget(form.message, {'attr': {'class': 'form-control form-control-minimal', 'rows':'3', 'placeholder': 'form_message'|trans }}) }}
                        {{ form_errors(form.message) }}
                    </div>

                </div>

                <div class="form-row mt-3">

                    <div class="col text-center">
                        <button class="text-uppercase ">> <span>{% trans %}form_tbn{% endtrans %}</span> <</button>
                    </div>

                </div>

                {{ form_end(form) }}

            </div>

        </div>

    </div>

</section>