{# empty Twig template #}
<section id="contact" class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <center><span class="eyebrow mb-1 text-primary" style="font-size: 20px">Quer estar presente no Hospitality Education Awards?</span></center>
                <center><h2>Entre em contato connosco!</h2></center>
            </div>
        </div>
        <div class="row">
            <div class="col">

                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'g-mb-30'}}) }}
                <div class="form-row mb-1">
                    <div class="col">
                        {#<input type="text" class="form-control form-control-minimal" placeholder="Name">#}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-minimal', 'placeholder': 'Nome'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="col">
                        {#<input type="text" class="form-control form-control-minimal" placeholder="Mail">#}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-minimal', 'placeholder': 'Email'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="col">
                        {#<input type="text" class="form-control form-control-minimal" placeholder="Phone">#}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-minimal', 'placeholder': 'Telefone'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>
                </div>
                <div class="form-row mb-1">
                    <div class="col">
                        {#<textarea class="form-control form-control-minimal" id="exampleFormControlTextarea1" rows="3" placeholder="Your Message"></textarea>#}

                        {{ form_widget(form.message, {'attr': {'class': 'form-control form-control-minimal', 'rows':'3', 'placeholder': 'Mensagem'}}) }}
                        {{ form_errors(form.message) }}

                    </div>
                </div>
                <div class="form-row mt-3">
                    <div class="col">
                        <button class="btn btn-primary px-5">Enviar</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>