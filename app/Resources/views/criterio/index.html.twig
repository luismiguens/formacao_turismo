{% extends 'base.html.twig' %}

{% block body %}

    {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}



    <!-- tables -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Critérios lista</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">


                    <div class="container">
                        <div class="row">
                            <div class="col">


                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}


                                <table class="table table-lined">
                                    <thead>
                                        <tr>
                                            {#<th scope="col">Id</th>#}
                                            <th>Titulopt</th>
                                            <th>Descricaopt</th>
                                            <th>Categoriapt</th>

                                            <th>Acções</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for criterio in criterios %}
                                            <tr>
                                                {#<td>{{ criterio.id }}</td>#}
                                                <td>{{ criterio.tituloPt }}</td>
                                                <td>{{ criterio.descricaoPt }}</td>
                                                <td>{{ criterio.categoria }}</td>
                                                <td> <a href="{{ path('admin_criterio_edit', { 'id': criterio.id }) }}">{% trans %}botao_editar{% endtrans %}</a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>

                                <ul>
                                    <li>
                                        <a href="{{ path('admin_criterio_new') }}">{% trans %}botao_criar{% endtrans %}</a>
                                    </li>
                                </ul>


                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </section>
    <!-- / table -->


{% endblock %}


