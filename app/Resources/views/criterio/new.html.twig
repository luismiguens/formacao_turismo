{% extends 'base.html.twig' %}

{% block body %}

    {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}

    <!-- form controls -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Crit√©rios criar</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_start(form) }}

                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}

                                <div class="form-group">
                                    {{ form_label(form.tituloPt) }}
                                    {{ form_errors(form.tituloPt) }}
                                    {{ form_widget(form.tituloPt, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.tituloEn) }}
                                    {{ form_errors(form.tituloEn) }}
                                    {{ form_widget(form.tituloEn, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.descricaoPt) }}
                                    {{ form_errors(form.descricaoPt) }}
                                    {{ form_widget(form.descricaoPt, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.descricaoEn) }}
                                    {{ form_errors(form.descricaoEn) }}
                                    {{ form_widget(form.descricaoEn, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                
                                   <div class="form-group">
                                    {{ form_label(form.isApenasVotacao) }}
                                    {{ form_errors(form.isApenasVotacao) }}
                                    {{ form_widget(form.isApenasVotacao, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                
                                <div class="form-group">
                                    {{ form_label(form.categoria) }}
                                    {{ form_errors(form.categoria) }}
                                    {{ form_widget(form.categoria, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <hr/>

                                <button type="submit" class="btn btn-primary">{% trans %}botao_guardar{% endtrans %}</button>
                                {{ form_end(form) }}

                                <ul>
                                    <li>
                                        <a href="{{ path('admin_criterio_index') }}">{% trans %}botao_voltar{% endtrans %}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




{% endblock %}
