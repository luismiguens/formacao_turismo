{% extends 'base.html.twig' %}

{% block body %}

    {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}



    <!-- tables -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Candidaturas lista</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">


                    <div class="container">
                        <div class="row">
                            <div class="col">


                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}
 {% set categorias_com_candidatura = [] %}
 
 
 
                                {% if candidaturas|length > 0 %}
                                
                                <h4>Candidaturas criadas</h4>
                                <table class="table table-lined">
                                    <thead>
                                        <tr>
                                            <th scope="col">Id</th>
                                            <th scope="col">Categoria</th>
                                            <th scope="col">PromotorNome</th>
                                            <th scope="col">PromotorProjecto</th>
                                            <th>Acções</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                       

                                        {% for candidatura in candidaturas %}

                                            {% set categorias_com_candidatura = categorias_com_candidatura|merge([candidatura.categoria.id]) %}
                                            <tr>
                                                <th scope="row">{{ candidatura.id}}</th>
                                                <th scope="row">{{ candidatura.categoria }}</th>
                                                <td>{{ candidatura.promotorNome }}</td>
                                                <td>{{ candidatura.promotorProjecto }}</td>

                                                <td>

                                                    <a href="{{ path('admin_candidatura_edit', { 'id': candidatura.id }) }}">Editar</a>

                                                </td>
                                            </tr>
                                        {% endfor %}

                                    </tbody>
                                </table>

                                <br/><br/>
                                
                                {% endif %}

                                <h4>Categorias sem candidatura</h4>

                                <table class="table table-lined">
                                    <thead>
                                        <tr>
                                            <th scope="col">Id</th>
                                            <th scope="col">Titulopt</th>
                                            <th scope="col">Descricaopt</th>
                                            <th scope="col">Imagem</th>
                                            <th scope="col">Acções</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for categoria in categorias %}

                                            {% if categoria.id not in categorias_com_candidatura %}
                                                <tr>
                                                    <th scope="row">{{ categoria.id }}</th>
                                                    <th scope="row">{{ categoria.tituloPt }}</th>
                                                    <td>{{ categoria.descricaoPt }}</td>
                                                    <td><img src="{{ vich_uploader_asset(categoria, 'imagemFile') }}" alt="{{ categoria.tituloPt }}" /></td>
                                                    <td><a href="{{ path('admin_candidatura_new', { 'categoria': categoria.id } ) }}">{% trans %}categories_Watch Now{% endtrans %}</a></td>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}

                                    </tbody>
                                </table>



                                {#<ul>
                                    <li>
                                        <a href="{{ path('admin_categoria_new') }}">Categorias criar</a>
                                    </li>
                                </ul>#}

                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </section>
    <!-- / table -->


{% endblock %}
