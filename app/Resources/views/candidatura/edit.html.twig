{% extends 'base.html.twig' %}

{% block body %}
    
    {% include 'default/header.html.twig'   with {'selected_menu': 'homepage'} %}

    <!-- form controls -->
    <section id="default" class="component">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h4>Candidaturas editar</h4>
                </div>
            </div>
        </div>

        <div class="tab-content" id="component-1">
            <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
                <div class="component-example">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_start(edit_form) }}


                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="alert alert-success">
                                        {{ flashMessage }}
                                    </div>
                                {% endfor %}

                                <div class="form-group">
                                    {{ form_label(edit_form.promotorNome) }}
                                    {{ form_errors(edit_form.promotorNome) }}
                                    {{ form_widget(edit_form.promotorNome, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.promotorProjecto) }}
                                    {{ form_errors(edit_form.promotorProjecto) }}
                                    {{ form_widget(edit_form.promotorProjecto, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(edit_form.promotorEmail) }}
                                    {{ form_errors(edit_form.promotorEmail) }}
                                    {{ form_widget(edit_form.promotorEmail, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.promotorTelefone) }}
                                    {{ form_errors(edit_form.promotorTelefone) }}
                                    {{ form_widget(edit_form.promotorTelefone, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(edit_form.promotorDescricaoPt) }}
                                    {{ form_errors(edit_form.promotorDescricaoPt) }}
                                    {{ form_widget(edit_form.promotorDescricaoPt, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(edit_form.promotorDescricaoEn) }}
                                    {{ form_errors(edit_form.promotorDescricaoEn) }}
                                    {{ form_widget(edit_form.promotorDescricaoEn, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(edit_form.documentoFile) }}
                                    {{ form_errors(edit_form.documentoFile) }}
                                    {{ form_widget(edit_form.documentoFile, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                {# iterate over each existing tag and render its only field: name #}
                                {% for resposta in edit_form.respostas %}
                                    <div class="form-group">
                                        {{ resposta.vars.value.criterio.tituloPt}}
                                        {{ form_errors(resposta.texto) }}
                                        {{ form_widget(resposta.texto, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                {% endfor %}

                                <hr/>

                                <button type="submit" class="btn btn-primary">Guardar</button>
                                {{ form_end(edit_form) }}

                                <ul>
                                    <li>
                                        <a href="{{ path('admin_candidatura_index') }}">Voltar a lista</a>
                                    </li>

                                    <li>
                                        {{ form_start(delete_form) }}
                                        <input type="submit" value="Delete">
                                        {{ form_end(delete_form) }}
                                    </li>
                                </ul>


                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>


    </section>




{% endblock %}
